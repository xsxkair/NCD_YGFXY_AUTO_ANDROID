<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.WifiSetActivity">

    <include
        android:id="@+id/include"
        layout="@layout/layout_top_bottom" />

    <TextView
        android:id="@+id/wifi_switch_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layoutTopHigh"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingStart="@dimen/dp_30"
        android:text="@string/wifi_switch_text"
        android:textSize="@dimen/sp_24"
        android:background="@color/grey"/>

    <Switch
        android:id="@+id/wifi_switch_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layoutTopHigh"
        android:layout_alignBaseline="@id/wifi_switch_textview"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_30"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/wifi_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wifi_switch_textview"
        android:layout_marginBottom="@dimen/layoutBottomHigh"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>