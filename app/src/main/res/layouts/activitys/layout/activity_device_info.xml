<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".Activitys.DeviceInfoActivity">

    <include
        android:id="@+id/include"
        layout="@layout/layout_top_bottom" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/radius_shape"
        android:paddingTop="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_50"
        android:layout_marginStart="400dp">

        <ImageView
            android:id="@+id/deviceInfoSetImageView"
            android:layout_width="41dp"
            android:layout_height="48dp"
            android:src="@drawable/device_admin"
            android:clickable="true"/>

        <Switch
            android:id="@+id/modifyDeviceInfoSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:showText="false"
            android:checked="false"
            android:track="@null"
            android:thumb="@drawable/switch_selector" />

        <TextView
            android:id="@+id/deviceNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DeviceNameText"
            android:layout_toEndOf="@id/deviceInfoSetImageView"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:layout_marginStart="@dimen/dp_100"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/deviceNameTextView"
            android:layout_alignBottom="@id/deviceNameTextView"
            android:text="@string/device_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:id="@+id/deviceIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DeviceIdText"
            android:layout_below="@id/deviceNameTextView"
            android:layout_alignStart="@id/deviceNameTextView"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:id="@+id/deviceIdValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/deviceIdTextView"
            android:layout_toEndOf="@id/deviceIdTextView"
            android:text="@string/device_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:id="@+id/deviceAddrTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DeviceAddrText"
            android:layout_below="@id/deviceIdTextView"
            android:layout_alignStart="@id/deviceNameTextView"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"/>
        <EditText
            android:id="@+id/deviceAddrEditText"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/deviceAddrTextView"
            android:layout_toEndOf="@id/deviceAddrTextView"
            android:text="@string/device_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:maxLength="50"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/editview_style"/>
        <ImageView
            android:id="@+id/clear_addr_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_text"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            android:layout_alignEnd="@id/deviceAddrEditText"
            android:layout_below="@id/deviceIdTextView"/>

        <TextView
            android:id="@+id/deviceUserTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DeviceUserText"
            android:layout_below="@id/deviceAddrTextView"
            android:layout_alignStart="@id/deviceNameTextView"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"/>
        <EditText
            android:id="@+id/deviceUserEditText"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/deviceUserTextView"
            android:layout_toEndOf="@id/deviceNameTextView"
            android:text="@string/DeviceUserText"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:maxLength="10"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/editview_style"/>
        <ImageView
            android:id="@+id/clear_user_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_text"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignEnd="@id/deviceAddrEditText"
            android:layout_below="@id/deviceAddrTextView"/>

        <TextView
            android:id="@+id/devicePhoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DevicePhoneText"
            android:layout_below="@id/deviceUserTextView"
            android:layout_alignStart="@id/deviceNameTextView"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"/>
        <EditText
            android:id="@+id/devicePhoneEditText"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/devicePhoneTextView"
            android:layout_toEndOf="@id/devicePhoneTextView"
            android:text="@string/device_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:maxLength="20"
            android:singleLine="true"
            android:ellipsize="end"
            android:inputType="phone"
            android:background="@drawable/editview_style"/>

        <ImageView
            android:id="@+id/clear_phone_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_text"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            android:layout_alignEnd="@id/deviceAddrEditText"
            android:layout_below="@id/deviceUserTextView"/>

    </RelativeLayout>

</RelativeLayout>