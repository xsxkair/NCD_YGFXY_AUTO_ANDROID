<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/layout_top_bottom" />

    <TextView
        android:id="@+id/eth_switch_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/layoutTopHigh"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_30"
        android:text="@string/eth_switch_text"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/ncd_blue"
        android:background="@color/black_overlay"/>

    <Switch
        android:id="@+id/eth_enable_switch"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_75"
        android:layout_alignBottom="@id/eth_switch_textview"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_50"
        android:textOff="@string/eth_off_text"
        android:textOn="@string/eth_on_text"
        android:showText="true"
        android:checked="false"
        android:track="@drawable/eth_switch_track"
        android:thumb="@drawable/eth_switch_thumb"/>

    <TextView
        android:id="@+id/eth_conf_click_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/eth_switch_textview"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_30"
        android:textSize="@dimen/sp_24"
        android:text="@string/eth_con_text"
        android:gravity="center_vertical"
        android:clickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_below="@id/eth_conf_click_textview"
        android:layout_alignStart="@id/eth_conf_click_textview"
        android:layout_alignEnd="@id/eth_conf_click_textview"/>


</RelativeLayout>