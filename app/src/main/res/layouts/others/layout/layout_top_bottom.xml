<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutTopHigh"
        android:background="@color/my_blue"
        app:flexDirection="row_reverse"
        app:flexWrap="nowrap"
        app:alignItems="center">

        <TextView
            android:id="@+id/system_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:textColor="@color/white"
            android:text="1970-01-01 00:00:00"
            android:textSize="@dimen/sp_24"/>

        <ImageView
            android:id="@+id/system_net_statu_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/net_wifi_white"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/device_service_statu_imageview"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/device_service_live"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/gprs_service_statu_imageview"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/gprs_service_dead"
            android:visibility="gone"/>

    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutBottomHigh"
        android:gravity="center_vertical"
        android:background="@color/ncd_blue"
        android:layout_alignParentBottom="true"
        android:text="@string/ncd_company_name_text"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dp_20"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layoutTopHigh"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/logo_mini"
        android:paddingRight="@dimen/dp_20"/>

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/layoutTopHigh"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@drawable/back_button"
        android:background="@null"/>

</RelativeLayout>
