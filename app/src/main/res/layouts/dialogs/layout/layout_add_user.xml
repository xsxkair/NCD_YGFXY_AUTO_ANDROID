<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addUserDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addUserText"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:background="@color/ncd_blue"
        android:gravity="center"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"/>

    <LinearLayout
        android:id="@+id/user_name_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addUserDialogTitle"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50">

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userNameText"
            android:textColor="@color/ncd_blue"
            android:textSize="@dimen/sp_30"/>
        <EditText
            android:id="@+id/userNameEditView"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:textColor="@color/ncd_blue"
            android:textSize="@dimen/sp_30"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_30"/>

    </LinearLayout>

    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_linearlayout"
        android:layout_alignLeft="@id/user_name_linearlayout"
        android:text="@string/userIdText"
        android:textColor="@color/ncd_blue"
        android:textSize="@dimen/sp_30"/>
    <EditText
        android:id="@+id/userIdEditView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/userIdTextView"
        android:layout_toEndOf="@id/userIdTextView"
        android:textColor="@color/ncd_blue"
        android:textSize="@dimen/sp_30"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/userPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/userIdTextView"
        android:layout_alignLeft="@id/userIdTextView"
        android:text="@string/userPhoneText"
        android:textColor="@color/ncd_blue"
        android:textSize="@dimen/sp_30"/>
    <EditText
        android:id="@+id/userPhoneEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/userPhoneTextView"
        android:layout_alignLeft="@id/userIdEditView"
        android:inputType="phone"
        android:textColor="@color/ncd_blue"
        android:textSize="@dimen/sp_30"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/user_job_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/userPhoneTextView"
        android:layout_alignLeft="@id/userIdTextView"
        android:textColor="@color/ncd_blue"
        android:text="@string/userJobText"
        android:textSize="@dimen/sp_30"/>
    <EditText
        android:id="@+id/user_job_EditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/user_job_TextView"
        android:layout_alignLeft="@id/userIdEditView"
        android:textColor="@color/ncd_blue"
        android:textSize="@dimen/sp_30"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/userDepTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/user_job_TextView"
        android:layout_alignLeft="@id/userIdTextView"
        android:layout_marginBottom="@dimen/dp_50"
        android:textColor="@color/ncd_blue"
        android:text="@string/userDepText"
        android:textSize="@dimen/sp_30"/>
    <EditText
        android:id="@+id/userDepEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/userDepTextView"
        android:layout_alignLeft="@id/userIdEditView"
        android:textColor="@color/ncd_blue"
        android:textSize="@dimen/sp_30"
        android:singleLine="true"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userDepTextView"
        android:layout_marginBottom="@dimen/dp_50"
        android:gravity="center">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_100"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_30"
            android:text="@string/cancelButtonText"/>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cancelButton"
            android:layout_alignBaseline="@id/cancelButton"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_30"
            android:text="@string/submitButtonText"/>

    </LinearLayout>


</RelativeLayout>