<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_body_shape">

    <TextView
        android:id="@+id/dialog_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title_shape"
        android:text="@string/dialog_title_error_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        android:paddingTop="@dimen/dialog_content_body_padding_top"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dialog_content_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ConmpanyPhoneText"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_20"
        android:paddingTop="@dimen/dialog_content_body_padding_top"
        android:paddingBottom="@dimen/dialog_content_body_padding_bottom"
        android:layout_below="@id/dialog_title_textview"
        android:gravity="center_horizontal"
        android:background="@drawable/dialog_content_shape"/>

    <View
        android:id="@+id/dialog_splite_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_splite_line"
        android:layout_below="@id/dialog_content_textview"
        android:background="@color/dialog_split_line"/>

    <Button
        android:id="@+id/dialog_submit_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_confirm_text"
        android:background="@null"
        android:textSize="@dimen/sp_25"
        android:textColor="@color/dialog_button_text"
        android:padding="@dimen/dp_10"
        android:layout_below="@id/dialog_splite_line1"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/dialog_splite_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_splite_line"
        android:background="@color/dialog_split_line"
        android:layout_below="@id/dialog_submit_button_1"/>

    <Button
        android:id="@+id/dialog_submit_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_confirm_text"
        android:background="@null"
        android:textSize="@dimen/sp_25"
        android:padding="@dimen/dp_10"
        android:textColor="@color/dialog_button_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_splite_line2"/>

    <View
        android:id="@+id/dialog_splite_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_splite_line"
        android:background="@color/dialog_split_line"
        android:layout_below="@id/dialog_submit_button_2"/>

    <Button
        android:id="@+id/dialog_submit_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_confirm_text"
        android:background="@null"
        android:textSize="@dimen/sp_25"
        android:padding="@dimen/dp_10"
        android:textColor="@color/dialog_button_text"
        android:layout_below="@id/dialog_splite_line3"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
