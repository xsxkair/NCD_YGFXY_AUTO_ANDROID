<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/testDataIndexTextView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:text="@string/DataTableIndexTitleText"/>

    <TextView
        android:id="@+id/testDataItemTextView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:text="@string/DataTableItemTitleText"/>

    <TextView
        android:id="@+id/testDataSampleTextView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:text="@string/DataTableSampleIdTitleText"/>

    <TextView
        android:id="@+id/testDataResultTextView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:text="@string/DataTableResultTitleText"/>

    <TextView
        android:id="@+id/testDataDateTextView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:text="@string/DataTableDateTitleText"/>

    <TextView
        android:id="@+id/testDataTesterTextView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:text="@string/DataTableTesterTitleText"/>
    
    <ImageView
        android:id="@+id/testDataReportImageView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_35"
        android:layout_weight="1"
        android:src="@mipmap/record"
        android:gravity="center"/>

</LinearLayout>
